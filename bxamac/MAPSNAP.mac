.********************************************************************** 00250001
.*                                                                      00251000
.* Declare variables                                                    00260000
         GBLB  &BXA_MAC_MAPSNAP        * Map has been generated?        00270000
.*                                                                      00290000
.* Check parameters                                                     00300000
&LABEL   CHKMAP DSECT=&DSECT,          *                               *00310000
               CB=&CB,                 *                               *00320000
               PRFX=&PRFX              *                                00330000
         AIF   (&BXA_RC GT 4).MEND                                      00340002
.*                                                                      00350000
.* Check the CB parameter                                               00360000
         AIF   ('&DSECT' EQ 'YES').DSECT                                00370000
         AIF   ('&CB' EQ 'SNAPDLIST').EMBED                             00380000
         AIF   ('&CB' EQ 'SNAPHLIST').EMBED                             00390000
         AIF   ('&CB' EQ 'SNAPLIST').EMBED                              00400000
.ERR5    MNOTE 8,'&CB control block not supported'                      00410000
         MEXIT                                                          00420000
.*                                                                      00430000
.* Generate embedded definition                                         00440000
.EMBED   ANOP                                                           00450000
&LABEL   NESTCB &CB,X,&PRFX                                             00460000
         MEXIT                                                          00470000
.*                                                                      00480000
.DSECT   ANOP                                                           00490000
         AIF   (&BXA_MAC_MAPSNAP).MEND                                  00500002
&BXA_MAC_MAPSNAP SETB 1                                                 00510000
.* Set up translation from control block to macro for DCL               00520000
         GBLC  &BXA_CB_SNAPDLIST                                        00530000
         GBLC  &BXA_CB_SNAPHLIST                                        00540000
         GBLC  &BXA_CB_SNAPLIST                                         00550000
&BXA_CB_SNAPDLIST SETC 'SNAP'                                           00560000
&BXA_CB_SNAPHLIST SETC 'SNAP'                                           00570000
&BXA_CB_SNAPLIST SETC 'SNAP'                                            00580000
.*                                                                      00590000
         MNOTE *,'Generating BXASNAP Dsects'                            00600000
*                                                                       00610000
SNAPLIST DSECT                                                          00620000
SNAPFROM DS    A                       * Start address of dump-range    00630000
SNAPSTAT DS    0X                      * Bit0 on to mark end-of-list    00640000
SNAPTO   DS    A                       * End address of dump-range      00650000
*                                                                       00660000
         ORG   ,                       *                                00670000
SNAPLIST_LEN EQU *-SNAPLIST            *                                00680000
*                                                                       00690000
SNAPHLIST DSECT                                                         00700000
SNAPHSTAT DS   0X                      * Bit0 on to mark end-of-list    00710000
SNAPHPTR DS    A                       * Pointer to header text         00720000
*                                                                       00730000
         ORG   ,                       * Reset to end of dsect          00740000
SNAPHLIST_LEN EQU *-SNAPHLIST                                           00750000
*                                                                       00760000
SNAPDLIST DSECT                                                         00770000
SNAPDFROM DS   A                       * Start address of dump-range    00780000
SNAPDSTAT DS   0X                      * Bit0 on to mark end-of-list    00790000
SNAPDTO  DS    A                       * End address of dump-range      00800000
SNAPDSTK DS    XL8                     * STOKEN of dataspace            00810000
*                                                                       00820000
         ORG   ,                       *                                00830000
SNAPDLIST_LEN EQU *-SNAPDLIST          *                                00840000
*                                                                       00850000
.*                                                                      00860000
.* Return to our original CSECT name                                    00870000
&SYSECT  &SYSSTYP                                                       00880000
.*                                                                      00890000
.MEND    MEND                                                           00910002
