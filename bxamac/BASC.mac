.*                                                                      00241000
.* Declare variables                                                    00250000
         LCLC  &_REG                   *                                00260000
         LCLC  &OPCD                   * Opcode                         00270000
         LCLC  &ENDLAB                 * Skip label                     00280000
.*                                                                      00290000
.* &COND specifies on which condition the BAS is to be executed         00300000
.*       valid values are:  E,  H,  L,  M,  O,  P,  Z, and              00310000
.*                         NE, NH, NL, NM, NO, NP, NZ                   00320000
.* &REG  Specifies the register to contain the return address           00330000
.* &DEST Specifies the address to branch to. If specified as a          00340000
.*       (register) a BASR will be generated in stead of a BAS.         00350000
.* &TYPE Specifies whether the designated routine is reached thru       00360000
.*       a local (BAS) branch or a remote (BASR) branch                 00370000
.*                                                                      00380000
.* Check the condition parameter                                        00390000
         AIF   ('&COND' EQ 'E').NOERR1                                  00400000
         AIF   ('&COND' EQ 'NE').NOERR1                                 00410000
         AIF   ('&COND' EQ 'Z').NOERR1                                  00420000
         AIF   ('&COND' EQ 'NZ').NOERR1                                 00430000
         AIF   ('&COND' EQ 'H').NOERR1                                  00440000
         AIF   ('&COND' EQ 'NH').NOERR1                                 00450000
         AIF   ('&COND' EQ 'L').NOERR1                                  00460000
         AIF   ('&COND' EQ 'NL').NOERR1                                 00470000
         AIF   ('&COND' EQ 'M').NOERR1                                  00480000
         AIF   ('&COND' EQ 'NM').NOERR1                                 00490000
         AIF   ('&COND' EQ 'O').NOERR1                                  00500000
         AIF   ('&COND' EQ 'NO').NOERR1                                 00510000
         AIF   ('&COND' EQ 'P').NOERR1                                  00520000
         AIF   ('&COND' EQ 'NP').NOERR1                                 00530000
.ERR1    MNOTE 8,'First parameter specified unknown condition mnemonic' 00540000
.NOERR1  ANOP                                                           00550000
.*                                                                      00560000
.* Check the register value specified                                   00570000
         AIF   ('&REG'(1,1) NE '(').NOERR2                              00580000
         AIF   (N'&REG EQ 0).ERR2A                                      00590000
         AIF   (N'&REG GT 1).ERR2B                                      00600000
         AGO   .NOERR2                                                  00610000
.ERR2A   MNOTE 8,'Second parm specifies no registers in sublist'        00620000
         AGO   .NOERR2                                                  00630000
.ERR2B   MNOTE 8,'Second parm specifies more than 1 register in sublist*00640000
               '                                                        00650000
.NOERR2  ANOP                                                           00660000
.*                                                                      00670000
.* Check the destination parameter                                      00680000
         AIF   ('&DEST'(1,1) NE '(').NOERR3                             00690000
         AIF   (N'&DEST EQ 0).ERR3A                                     00700000
         AIF   (N'&DEST GT 1).ERR3B                                     00710000
         AGO   .NOERR3                                                  00720000
.ERR3A   MNOTE 8,'Third parm specifies no registers in sublist'         00730000
         AGO   .NOERR3                                                  00740000
.ERR3B   MNOTE 8,'Third parm specifies more than 1 register in sublist' 00750000
.NOERR3  ANOP                                                           00760000
.*                                                                      00770000
.* Check the TYPE parameter                                             00780000
         AIF   ('&TYPE' EQ 'LOCAL').NOERR4                              00790000
         AIF   ('&TYPE' EQ 'REMOTE').NOERR4                             00800000
.ERR4    MNOTE 8,'TYPE parameter must be LOCAL or REMOTE'               00810000
.NOERR4  ANOP                                                           00820000
.*                                                                      00830000
.* Extract register to use from REG-parameter                           00840000
&_REG    SETC  '&REG'                                                   00850000
         AIF   ('&REG'(1,1) NE '(').REGOK                               00860000
&_REG    SETC  '&REG(1)'                                                00870000
.REGOK   ANOP                                                           00880000
.*                                                                      00890000
.* Create Bx opcode to use if condition not met                         00900000
         AIF   (K'&COND EQ 1).OPCD1                                     00910000
.* Condition is Nx --> create a Bx opcode                               00920000
&OPCD    SETC  'B'.'&COND'(2,1)                                         00930000
         AGO   .OPCDOK                                                  00940000
.OPCD1   ANOP                                                           00950000
.* Condition is x --> create a BNx opcode                               00960000
&OPCD    SETC  'BN'.'&COND'                                             00970000
.OPCDOK  ANOP                                                           00980000
.*                                                                      00990000
.* Generate branch over BAS in case condition not met                   01000000
&ENDLAB  SETC  '_BAS&SYSNDX'                                            01010000
&LABEL   &OPCD &ENDLAB                 * Condition not met: skip branch 01020000
.*                                                                      01030000
.* Generate BAS or BASR depending on DEST parameter                     01040000
         AIF   ('&DEST'(1,1) EQ '(').BASR                               01050000
         AIF   ('&TYPE' EQ 'REMOTE').REMOTE                             01060000
.* Must be a local branch: generate a BAS                               01070000
         BAS   &REG,&DEST              * Condition OK: branch           01080000
         AGO   .EXIT                                                    01090000
.*                                                                      01100000
.REMOTE  ANOP  ,                                                        01110000
         L     R15,=AL4(&DEST)         * Condition OK: load terget addr 01120000
         BASR  &REG,R15                * and branch to routine          01130000
         AGO   .EXIT                                                    01140000
.*                                                                      01150000
.BASR    ANOP  ,                                                        01160000
         BASR  &REG,&DEST(1)           * Condition OK: branch           01170000
.*                                                                      01180000
.EXIT    ANOP  ,                                                        01190000
&ENDLAB  LABEL ,                                                        01200000
.*                                                                      01210000
.MEND    MEND                                                           01220003
