.* or disabled in any way.                                              00249001
.*                                                                      00249101
.********************************************************************** 00249201
         GBLA  &BXA_RC                 * Returncode from CHKLIC         00249301
         CHKLIC EPSW                   * Check license acceptance       00249401
         AIF   (&BXA_RC NE 0).MEND                                      00249502
.********************************************************************** 00249601
.*                                                                      00249701
.* End of special code that is part of the Copyright Notice             00249801
.*                                                                      00249901
.********************************************************************** 00250001
.*                                                                      00250101
.* Declare variables                                                    00251000
         LCLC  &_REG                                                    00260000
         LCLC  &_REG1,&_REG2                                            00270000
         LCLA  &REGN                                                    00280000
.*                                                                      00290000
.* Check the REG parameter                                              00300000
         AIF   (K'&REG EQ 0).ERR1A                                      00310000
&_REG    SETC  '&REG'                                                   00320000
         AIF   ('&_REG'(1,1) NE '(').LAB1A * If enclosed in parentheses 00330000
&_REG    SETC  '&REG(1)'               * Remove parentheses             00340000
.LAB1A   ANOP                                                           00350000
         AIF   ('&_REG'(1,1) NE 'R').LAB1B * If R...                    00360000
&_REG    SETC  '&_REG'(2,*)            * Remove leading R               00370000
&_REG1   SETC  'R'                                                      00380000
&_REG2   SETC  'R'                                                      00390000
.LAB1B   ANOP                                                           00400000
         AIF   ('&_REG' EQ '0').LAB1C                                   00410000
         AIF   ('&_REG' EQ '00').LAB1C                                  00420000
         AIF   ('&_REG' EQ '14').LAB1C                                  00430000
         AGO   .ERR1B                                                   00440000
.LAB1C   ANOP                                                           00450000
&_REG1   SETC  '&_REG1'.'&_REG'                                         00460000
&REGN    SETA  &_REG                                                    00470000
&REGN    SETA  &REGN+1                                                  00480000
&_REG2   SETC  '&_REG2'.'&REGN'                                         00490000
         AGO   .NOERR1                                                  00500000
.ERR1A   MNOTE 8,'You should specify an even general purpose register'  00510000
         MEXIT                                                          00520000
.ERR1B   MNOTE 8,'You can use only R0/R1 or R14/R15'                    00530000
.NOERR1  ANOP                                                           00540000
.*                                                                      00550000
.* Check the number of parameters                                       00560000
         AIF   (N'&SYSLIST GT 1).ERR2                                   00570000
         AGO   .NOERR2                                                  00580000
.ERR2    MNOTE 4,'Too many parameters specified: ignored'               00590000
.NOERR2  ANOP                                                           00600000
.*                                                                      00610000
.* Generate code                                                        00620000
&LABEL   LA    &_REG2,_EPSW&SYSNDX     * Load internal return address   00630000
         LA    &_REG1,1                * Amode bit                      00640000
         SLL   &_REG1,31               *   into bit 0                   00650000
         OR    &_REG2,&_REG1           *   of the return address        00660000
         BAKR  &_REG2,R0               * Create stack entry (nobranch)  00670000
         LA    &_REG2,1                * Specifies PSW for ESTA         00680000
         ESTA  &_REG1,&_REG2           * Put PSW into registers         00690000
         PR    ,                       * Remove stack entry             00700000
_EPSW&SYSNDX LABEL ,                   *                                00710000
.*                                                                      00720000
.MEND    MEND                                                           00730002
