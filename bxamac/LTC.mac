.*                                                                      00280101
.* Declare variables                                                    00281000
         LCLC  &_MASK                                                   00290000
.*                                                                      00300000
.* Check the REG parameter                                              00310000
         AIF   (K'&REG NE 0).NOERR1A                                    00320000
.ERR1A   MNOTE 8,'No register specified'                                00330000
         AGO   .NOERR1                                                  00340000
.NOERR1A ANOP                                                           00350000
         AIF   ('&REG'(1,1) NE '(').NOERR1                              00360000
         AIF   (N'&REG EQ 0).ERR1B                                      00370000
         AIF   (N'&REG GT 1).ERR1C                                      00380000
         AGO   .NOERR1                                                  00390000
.ERR1B   MNOTE 8,'No register specified within sublist'                 00400000
         AGO   .NOERR1                                                  00410000
.ERR1C   MNOTE 8,'More than 1 register specified in sublist'            00420000
.NOERR1  ANOP                                                           00430000
.*                                                                      00440000
.* Check the LOC parameter                                              00450000
         AIF   (K'&LOC NE 0).NOERR2                                     00460000
.ERR2    MNOTE 8,'LOC parameter not specified'                          00470000
.NOERR2  ANOP                                                           00480000
.*                                                                      00490000
.* Check the MASK parameter                                             00500000
&_MASK   SETC  '&MASK'                                                  00510000
         AIF   (K'&MASK NE 0).MASKOK                                    00520000
&_MASK   SETC  'NNNY'                                                   00530000
.MASKOK  ANOP                                                           00540000
.*                                                                      00550000
.* Check the number of parameters                                       00560000
         AIF   (N'&SYSLIST LE 3).NOERR3                                 00570000
.ERR3    MNOTE 4,'Too many parameters specified: ignored'               00580000
.NOERR3  ANOP                                                           00590000
.*                                                                      00600000
&LABEL   CLEAR &REG                    * Wipe register                  00610000
         ICM   &REG,&_MASK,&LOC        * Load and test character(s)     00620000
.*                                                                      00630000
.MEND    MEND                                                           00640002
