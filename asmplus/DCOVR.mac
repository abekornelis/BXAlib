.*                                                                      00439901
.********************************************************************** 00440001
.*                                                                      00440101
.* Declare variables                                                    00441000
         GBLA  &BXA_DCOVR              * Ptr to last valid              00450000
         GBLC  &BXA_DCOVR_LAB(50)      * Labels                         00460000
         GBLC  &BXA_DCOVR_PRM(50)      * Parm strings                   00470000
         GBLC  &BXA_DCOVR_NAM(50)      * New names                      00480000
         LCLA  &I                      * Index                          00490000
         LCLC  &PRMS                   * Parameter string               00500000
.*                                                                      00510000
.* Check LABEL parameter                                                00520000
         AIF   (K'&LABEL GT 0).NOERR1                                   00530000
         AIF   ('&OPT' EQ '*END').NOERR1                                00540000
.ERR1    MNOTE 8,'Missing label parameter'                              00550000
         MEXIT                                                          00560000
.NOERR1  ANOP                                                           00570000
.*                                                                      00580000
.* Check the OPT parameter                                              00590000
         AIF   (K'&OPT NE 0).NOERR2                                     00600000
.ERR2A   MNOTE 8,'Missing parameter(s)'                                 00610000
         MEXIT                                                          00620000
.NOERR2  ANOP  ,                                                        00630000
.*                                                                      00640000
.* Check the NEWNAME parameter (must be present if &OPT = *NEWNAME)     00650000
         AIF   ('&OPT' EQ '*NEWNAME' AND K'&NEWNAM EQ 0).ERR3A          00660000
         AGO   .NOERR3                                                  00670000
.ERR3A   MNOTE 8,'New name not specified with option *NEWNAME'          00680000
         MEXIT                                                          00690000
.NOERR3  ANOP                                                           00700000
.*                                                                      00710000
.* Check number of parameters                                           00720000
         AIF   ('&OPT' EQ '*END' AND N'&SYSLIST GT 1).ERR4A             00730000
         AIF   ('&OPT' EQ '*END').NOERR4                                00740000
         AIF   ('&OPT' EQ '*DS' AND N'&SYSLIST GT 1).ERR4A              00750000
         AIF   ('&OPT' EQ '*DS').NOERR4                                 00760000
         AIF   ('&OPT' EQ '*SUPPRESS' AND N'&SYSLIST GT 1).ERR4A        00770000
         AIF   ('&OPT' EQ '*SUPPRESS').NOERR4                           00780000
         AGO   .NOERR4                                                  00790000
.ERR4A   MNOTE 4,'More than 1 argument: remainder ignored'              00800000
.NOERR4  ANOP                                                           00810000
.*                                                                      00820000
.* Which option requested?                                              00830000
         AIF   ('&OPT' EQ '*END').END                                   00840000
         AIF   ('&OPT' EQ '*DS').DS                                     00850000
         AIF   ('&OPT' EQ '*SUPPRESS').SUPPRESS                         00860000
         AIF   ('&OPT' EQ '*NEWNAME').NEWNAME                           00870000
.*                                                                      00880000
.* Normal: add entries to tables                                        00890000
&I       SETA  0                       * SYSLIST(1) ff into PRMS        00900000
         AGO   .BLDPRMS                                                 00910000
.*                                                                      00920000
.* DS option                                                            00930000
.DS      ANOP ,                                                         00940000
&PRMS    SETC  '&OPT'                  * Set to *DS                     00950000
         AGO   .ADDNTRY                                                 00960000
.*                                                                      00970000
.* Suppress option                                                      00980000
.SUPPRESS ANOP ,                                                        00990000
&PRMS    SETC  '&OPT'                  * Set to *SUPPRESS               01000000
         AGO   .ADDNTRY                                                 01010000
.*                                                                      01020000
.* Newname option                                                       01030000
.NEWNAME ANOP  ,                                                        01040000
&I       SETA  2                       * SYSLIST(3) ff into PRMS        01050000
         AGO   .BLDPRMS                                                 01060000
.*                                                                      01070000
.* Build parameter string from SYSLIST entries                          01080000
.BLDPRMS ANOP  ,                                                        01090000
&I       SETA  &I+1                    * Point next SYSLIST entry       01100000
         AIF   (&I GT N'&SYSLIST).PRMSOK                                01110000
&PRMS    SETC  '&PRMS'.','.'&SYSLIST(&I)'                               01120000
         AGO   .BLDPRMS                                                 01130000
.PRMSOK  ANOP  ,                                                        01140000
         AIF   (K'&PRMS EQ 0).ADDNTRY                                   01150000
&PRMS    SETC  '&PRMS'(2,*)            * Remove leading comma           01160000
.*                                                                      01170000
.* Add entry to tables                                                  01180000
.ADDNTRY ANOP  ,                                                        01190000
&I       SETA  &BXA_DCOVR+1            * Next free entry                01200000
&BXA_DCOVR_LAB(&I) SETC '&LABEL'       * Insert label,                  01210000
&BXA_DCOVR_PRM(&I) SETC '&PRMS'        *   and parameters               01220000
&BXA_DCOVR_NAM(&I) SETC ''             *   into tables                  01230000
         AIF   ('&OPT' NE '*NEWNAME').NAMOK                             01240000
&BXA_DCOVR_NAM(&I) SETC '&NEWNAM'      *                                01250000
.NAMOK   ANOP  ,                                                        01260000
&BXA_DCOVR SETA &I                     * And update ptr to last valid   01270000
.*                                                                      01280000
.* Replace DC-instruction by our DC-macro on the first override         01290000
         AIF   (&BXA_DCOVR GT 1).MEND                                   01300002
         OPSYNS DC                     * Replace DC by _DC              01310000
         MEXIT                                                          01320000
.*                                                                      01330000
.* Ending current DCOVR requests. Issue a message for any unused        01340000
.* entries in BXA_DCOVR tables.                                         01350000
.END     ANOP                                                           01360000
         AIF   (&BXA_DCOVR EQ 0).MEND * No entries remain               01370002
&I       SETA  0                       * I indexes BXA_DCOVR_xxx        01380000
.LOOP1   ANOP  ,                       * For all current entries        01390000
&I       SETA  &I+1                    * Point next entry               01400000
         AIF   (&I GT &BXA_DCOVR).LOOP1OK * At end: quit loop           01410000
         MNOTE 4,'DCOVR for &BXA_DCOVR_LAB(&I) discarded'               01420000
         AGO   .LOOP1                                                   01430000
.LOOP1OK ANOP                                                           01440000
&BXA_DCOVR SETA 0                      * Reset valid counter to 0       01450000
.*                                                                      01460000
.* Disable our DC-macro by replacing _DC by original DC-instruction     01470000
         OPSYNS _DC                    * Reset DC-instruction           01480000
.*                                                                      01490000
.MEND    MEND                                                           01510002
