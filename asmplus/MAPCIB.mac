CIBSTCOM EQUOVR ,,v,CIBVERB                                             00570000
CIBMODFY EQUOVR ,,v,CIBVERB                                             00580000
CIBSTOP  EQUOVR ,,v,CIBVERB                                             00590000
CIBMOUNT EQUOVR ,,v,CIBVERB                                             00600000
.*                                                                      00610000
.* Declare version levels                                               00620000
CIBS313  EQUOVR ,,v,CIBRSV1                                             00630000
CIBS410  EQUOVR ,,v,CIBRSV1                                             00640000
CIB15497 EQUOVR ,,v,CIBRSV1                                             00650000
CIBVRSN  EQUOVR ,,v,CIBRSV1                                             00660000
.*                                                                      00670000
