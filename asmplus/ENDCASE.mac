.********************************************************************** 00220001
.*                                                                      00221000
.* Declare variables                                                    00230000
         GBLA  &BXA_STK                * Index to last valid            00240000
         GBLC  &BXA_STK_OP(5)          * Opcodes                        00250000
         GBLC  &BXA_STK_LBL(5)         * Labels                         00260000
         GBLA  &BXA_STK_LVL(5)         * Levels                         00270000
         LCLC  &OP                     * Last opcode on stack           00280000
         LCLA  &LVL                    * Last level on stack            00290000
         LCLC  &LBL                    * Last label on stack            00300000
         LCLA  &I                      * Stack pointer                  00310000
.*                                                                      00320000
.* Check label parameter                                                00330000
         AIF   (K'&LABEL EQ 0).NOERR1                                   00340000
.ERR1    MNOTE 4,'Label ignored'                                        00350000
.NOERR1  ANOP                                                           00360000
.*                                                                      00370000
.* Check nr of parameters                                               00380000
         AIF   (N'&SYSLIST EQ 0).NOERR2                                 00390000
         AIF   (K'&SYSLIST(1) GT 0).ERR2A                               00400000
         AIF   (N'&SYSLIST EQ 1).NOERR2                                 00410000
         AIF   (K'&SYSLIST(2) GT 0).ERR2A                               00420000
         AIF   (N'&SYSLIST EQ 2).NOERR2                                 00430000
.ERR2A   MNOTE 4,'No arguments expected: ignored'                       00440000
.NOERR2  ANOP                                                           00450000
.*                                                                      00460000
.* Check that current stack-entry designates a case or else-block       00470000
&I       SETA  &BXA_STK                * Copy stack pointer             00480000
         AIF   (&I LT 1).ERR3A         * Stack underflow                00490000
&OP      SETC  '&BXA_STK_OP(&I)'       * Extract opcode from stack      00500000
         AIF   ('&OP' EQ 'CASE').NOERR3                                 00510000
         AIF   ('&OP' NE 'ELSE').ERR3B                                  00520000
&I       SETA  &I-1                    * Point preceding entry          00530000
&OP      SETC  '&BXA_STK_OP(&I)'       * Extract preceding opcode       00540000
         AIF   ('&OP' NE 'CASE').ERR3C                                  00550000
         AGO   .NOERR3                                                  00560000
.ERR3A   MNOTE 8,'No preceding CASE statement: ignored'                 00570000
         MEXIT                                                          00580000
.ERR3B   MNOTE 8,'Cannot use ENDCASE to terminate a &OP.-block: ignored*00590000
               '                                                        00600000
         MEXIT                                                          00610000
.ERR3C   MNOTE 8,'Cannot use ENDCASE to terminate an ELSE block for &OP*00620000
               '                                                        00630000
         MEXIT                                                          00640000
.NOERR3  ANOP                                                           00650000
.*                                                                      00660000
.* Remove all stack entries with the current nesting level              00670000
.* If an ELSE-statement precedes this ENDCASE, then the ELSE has        00680000
.* already generated the target label of the last preceding CASE        00690000
.* statement.                                                           00700000
.*                                                                      00710000
.* Comment line to delimit the ELSE-block                               00720000
*                                                                       00730000
.*                                                                      00740000
.* Set up to loop thru CASE-entries                                     00750000
.* If last entry was ELSE, handle the ELSE before entering the loop     00760000
&I       SETA  &BXA_STK                * Point current stack entry      00770000
&LVL     SETA  &BXA_STK_LVL(&I)        * Extract current nesting level  00780000
&OP      SETC  '&BXA_STK_OP(&I)'       * Extract last opcode            00790000
         AIF   ('&OP' NE 'ELSE').LOOP1 * Loop to drop CASEs             00800000
.* Terminate ELSE-block                                                 00810000
&LBL     SETC  '&BXA_STK_LBL(&I)'      * Extract end-of-else label      00820000
&LBL     LABEL ,                       * End of ELSE-block              00830000
&I       SETA  &I-2                    * Remove ELSE and last CASE      00840000
         AIF   (&I EQ 0).LOOP1OK       * If nothing left: skip loop     00850000
.*                                                                      00860000
.* Now loop to terminate all remaining CASE-blocks of this level        00870000
.LOOP1   ANOP  ,                                                        00880000
         AIF   (&BXA_STK_LVL(&I) NE &LVL).LOOP1OK * LVL-change: endloop 00890000
&OP      SETC  '&BXA_STK_OP(&I)'       * Extract last opcode            00900000
         AIF   ('&OP' NE 'CASE').INTERR * Internal error                00910000
&LBL     SETC  '&BXA_STK_LBL(&I)'      * Extract end-of-else label      00920000
&LBL     LABEL ,                       * End of CASE-block              00930000
&I       SETA  &I-1                    * Remove ELSE-entry from stack   00940000
         AIF   (&I GT 0).LOOP1         * If still valid: remove next    00950000
.LOOP1OK ANOP  ,                                                        00960000
.*                                                                      00970000
.* Update the real stack pointer                                        00980000
&BXA_STK SETA  &I                                                       00990000
         AGO   .MEND
.*
.INTERR  ANOP  ,
         MNOTE 12,'Internal error in ENDCASE macro'
.*                                                                      01000000
.MEND    MEND                                                           01010002
