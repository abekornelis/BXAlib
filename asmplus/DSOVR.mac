.********************************************************************** 00420001
.*                                                                      00420101
.* Declare variables                                                    00421000
         GBLA  &BXA_DSOVR              * Ptr to last valid              00430000
         GBLC  &BXA_DSOVR_LAB(50)      * Labels                         00440000
         GBLC  &BXA_DSOVR_PRM(50)      * Parm strings                   00450000
         GBLC  &BXA_DSOVR_NAM(50)      * New names                      00460000
         LCLA  &I                      * Index                          00470000
         LCLC  &PRMS                   * Parameter string               00480000
.*                                                                      00490000
.* Check LABEL parameter                                                00500000
         AIF   (K'&LABEL GT 0).NOERR1                                   00510000
         AIF   ('&OPT' EQ '*END').NOERR1                                00520000
.ERR1    MNOTE 8,'Missing label parameter'                              00530000
         MEXIT                                                          00540000
.NOERR1  ANOP                                                           00550000
.*                                                                      00560000
.* Check the OPT parameter                                              00570000
         AIF   (K'&OPT NE 0).NOERR2                                     00580000
.ERR2A   MNOTE 8,'Missing parameter(s)'                                 00590000
         MEXIT                                                          00600000
.NOERR2  ANOP  ,                                                        00610000
.*                                                                      00620000
.* Check the NEWNAME parameter (must be present if &OPT = *NEWNAME)     00630000
         AIF   ('&OPT' EQ '*NEWNAME' AND K'&NEWNAM EQ 0).ERR3A          00640000
         AGO   .NOERR3                                                  00650000
.ERR3A   MNOTE 8,'New name not specified with option *NEWNAME'          00660000
         MEXIT                                                          00670000
.NOERR3  ANOP                                                           00680000
.*                                                                      00690000
.* Check number of parameters                                           00700000
         AIF   ('&OPT' EQ '*END' AND N'&SYSLIST GT 1).ERR4A             00710000
         AIF   ('&OPT' EQ '*END').NOERR4                                00720000
         AIF   ('&OPT' EQ '*SUPPRESS' AND N'&SYSLIST GT 1).ERR4A        00730000
         AIF   ('&OPT' EQ '*SUPPRESS').NOERR4                           00740000
         AGO   .NOERR4                                                  00750000
.ERR4A   MNOTE 4,'More than 1 argument: remainder ignored'              00760000
.NOERR4  ANOP                                                           00770000
.*                                                                      00780000
.* Which option requested?                                              00790000
         AIF   ('&OPT' EQ '*END').END                                   00800000
         AIF   ('&OPT' EQ '*SUPPRESS').SUPPRESS                         00810000
         AIF   ('&OPT' EQ '*NEWNAME').NEWNAME                           00820000
.*                                                                      00830000
.* Normal: add entries to tables                                        00840000
&I       SETA  0                       * SYSLIST(1) ff into PRMS        00850000
         AGO   .BLDPRMS                                                 00860000
.*                                                                      00870000
.* Suppress option                                                      00880000
.SUPPRESS ANOP ,                                                        00890000
&PRMS    SETC  '&OPT'                  * Set to *SUPPRESS               00900000
         AGO   .ADDNTRY                                                 00910000
.*                                                                      00920000
.* Newname option                                                       00930000
.NEWNAME ANOP  ,                                                        00940000
&I       SETA  2                       * SYSLIST(3) ff into PRMS        00950000
         AGO   .BLDPRMS                                                 00960000
.*                                                                      00970000
.* Build parameter string from SYSLIST entries                          00980000
.BLDPRMS ANOP  ,                                                        00990000
&I       SETA  &I+1                    * Point next SYSLIST entry       01000000
         AIF   (&I GT N'&SYSLIST).PRMSOK                                01010000
&PRMS    SETC  '&PRMS'.','.'&SYSLIST(&I)'                               01020000
         AGO   .BLDPRMS                                                 01030000
.PRMSOK  ANOP  ,                                                        01040000
         AIF   (K'&PRMS EQ 0).ADDNTRY                                   01050000
&PRMS    SETC  '&PRMS'(2,*)            * Remove leading comma           01060000
.*                                                                      01070000
.* Add entry to tables                                                  01080000
.ADDNTRY ANOP  ,                                                        01090000
&I       SETA  &BXA_DSOVR+1            * Next free entry                01100000
&BXA_DSOVR_LAB(&I) SETC '&LABEL'       * Insert label,                  01110000
&BXA_DSOVR_PRM(&I) SETC '&PRMS'        *   and parameters               01120000
&BXA_DSOVR_NAM(&I) SETC ''             *   into tables                  01130000
         AIF   ('&OPT' NE '*NEWNAME').NAMOK                             01140000
&BXA_DSOVR_NAM(&I) SETC '&NEWNAM'      *                                01150000
.NAMOK   ANOP  ,                                                        01160000
&BXA_DSOVR SETA &I                     * And update ptr to last valid   01170000
.*                                                                      01180000
.* Replace DS-instruction by our DS-macro on the first override         01190000
         AIF   (&BXA_DSOVR GT 1).MEND                                   01200002
         OPSYNS DS                     * Replace DS by _DS              01210000
         MEXIT                                                          01220000
.*                                                                      01230000
.* Ending current DSOVR requests. Issue a message for any unused        01240000
.* entries in BXA_DSOVR tables.                                         01250000
.END     ANOP                                                           01260000
         AIF   (&BXA_DSOVR EQ 0).MEND * No entries remain               01270002
&I       SETA  0                       * I indexes BXA_DSOVR_xxx        01280000
.LOOP1   ANOP  ,                       * For all current entries        01290000
&I       SETA  &I+1                    * Point next entry               01300000
         AIF   (&I GT &BXA_DSOVR).LOOP1OK * At end: quit loop           01310000
         MNOTE 4,'DSOVR for &BXA_DSOVR_LAB(&I) discarded'               01320000
         AGO   .LOOP1                                                   01330000
.LOOP1OK ANOP                                                           01340000
&BXA_DSOVR SETA 0                      * Reset valid counter to 0       01350000
.*                                                                      01360000
.* Disable our DS-macro by replacing _DS by original DS-instruction     01370000
         OPSYNS _DS                    * Reset DS-instruction           01380000
.*                                                                      01390000
.MEND    MEND                                                           01410002
