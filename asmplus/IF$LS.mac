.*                                                                      00251000
.* Declare variables                                                    00260000
         LCLA  &LEN                                                     00270000
         LCLA  &I                                                       00280000
         LCLC  &NUM                                                     00290000
         LCLC  &_FLD                                                    00300000
.*                                                                      00310000
.* Determine length of field to be loaded                               00320000
         AIF   ('&TYPE' EQ '0').DECLIT                                  00330000
         AIF   (K'&LITLEN EQ 0).FLDLEN                                  00340000
         AIF   (&LITLEN EQ 0).FLDLEN                                    00350000
&LEN     SETA  &LITLEN                 * Length is that of literal      00360000
         AGO   .LENOK                                                   00370000
.FLDLEN  ANOP  ,                                                        00380000
&LEN     SETA  L'&FLD                  * Length is that of field        00390000
.LENOK   ANOP                                                           00400000
.*                                                                      00410000
.* Action depends on length of field to be loaded                       00420000
         AIF   (&LEN EQ 1).LEN1                                         00430000
         AIF   (&LEN EQ 2).LEN2                                         00440000
         AIF   (&LEN EQ 3).LEN3                                         00450000
         AIF   (&LEN EQ 4).LEN4                                         00460000
&_FLD    SETC  (DOUBLE '&FLD')                                          00470000
         MNOTE 8,'&_FLD is too long to load into a register'            00480000
         MEXIT                                                          00490000
.*                                                                      00500000
.* Load a 1-byte value into a register                                  00510000
.LEN1    ANOP  ,                                                        00520000
&LABEL   ICM   &REG,YNNN,&FLD          * Load signed byte               00530000
         SRA   &REG,24                 * Remove garbage & sign extend   00540000
         MEXIT                                                          00550000
.*                                                                      00560000
.* Load a 2-byte value into a register                                  00570000
.LEN2    ANOP  ,                                                        00580000
&I       SETA  ('AFHVY' FIND '&TYPE')  * Some aligned type?             00590000
         AIF   (&I NE 0).LEN2_LH       * Yes: use LH                    00600000
         AIF   ('&FLD'(1,1) EQ '=').LEN2_LH * 2-byte literal: aligned!  00610000
&LABEL   ICM   &REG,YYNN,&FLD          * Load signed bytes              00620000
         SRA   &REG,16                 * Remove garbage & sign extend   00630000
         MEXIT                                                          00640000
.LEN2_LH ANOP  ,                                                        00650000
&LABEL   LH    &REG,&FLD               * Load signed halfword           00660000
         MEXIT                                                          00670000
.*                                                                      00680000
.* Load a 3-byte value into a register                                  00690000
.LEN3    ANOP  ,                                                        00700000
&LABEL   ICM   &REG,YYYN,&FLD          * Load signed bytes              00710000
         SRA   &REG,8                  * Remove garbage & sign extend   00720000
         MEXIT                                                          00730000
.*                                                                      00740000
.* Load a 4-byte value into a register                                  00750000
.LEN4    ANOP  ,                                                        00760000
&I       SETA  ('AFV' FIND '&TYPE')    * Some aligned type?             00770000
         AIF   (&I NE 0).LEN4_L        * Yes: use L                     00780000
         AIF   ('&FLD'(1,1) EQ '=').LEN4_L * 4-byte literal: aligned!   00790000
&LABEL   ICM   &REG,YYYY,&FLD          * Load signed bytes              00800000
         MEXIT                                                          00810000
.LEN4_L  ANOP  ,                                                        00820000
&LABEL   L     &REG,&FLD               * Load signed word               00830000
         MEXIT                                                          00840000
.*                                                                      00850000
.* Handle a decimal literal - may be negative                           00860000
.DECLIT  ANOP  ,                                                        00870000
         AIF   ('&FLD'(1,1) EQ '-').DECLITN                             00880000
&I       SETA  ('&FLD'(1,1) FIND '0123456789')                          00890000
         AIF   (&I NE 0).DECLITP       * Decimal value                  00900000
         AIF   ('&FLD'(K'&FLD,1) EQ '''').DECLITP * Hex or Bin value    00910000
.* Specified literal must be an equated symbol of type 0                00920000
         AIF   (T'&FLD EQ '0').NOERR1                                   00930000
&_FLD    SETC  (DOUBLE '&FLD')         * Make displayable               00940000
.ERR1    MNOTE 8,'&_FLD has type T'&FLD, expected type of 0'            00950000
         MEXIT                                                          00960000
.NOERR1  ANOP  ,                                                        00970000
.*                                                                      00980000
.* Retrieve value and decide how to load it                             00990000
&I       SETA  L'&FLD                  * Type 0: length = copy of value 01000000
         AIF   (&I EQ 0).USE_CLEAR                                      01010000
         AIF   (&I GT 32767).USE_L                                      01020000
         AIF   (&I GT 4095).USE_LH                                      01030000
         AIF   (&I GT 0).USE_LA                                         01040000
         AIF   (&I LT -32767).USE_L                                     01050000
         AGO   .USE_LH                                                  01060000
.*                                                                      01070000
.* Handle positive literal                                              01080000
.DECLITP ANOP  ,                       * Positive literal number        01090000
&I       SETA  &FLD                    * Load decimal value             01100000
         AIF   (&I EQ 0).USE_CLEAR                                      01110000
         AIF   (&I LT 4096).USE_LA                                      01120000
         AIF   (&I LT 32768).USE_LH                                     01130000
         AGO   .USE_L                                                   01140000
.*                                                                      01150000
.* Handle negative literal                                              01160000
.DECLITN ANOP  ,                       * Negative literal number        01170000
&NUM     SETC  '&FLD'(2,*)             * Extract numerical part         01180000
&I       SETA  &NUM                                                     01190000
         AIF   (&I EQ 0).USE_CLEAR                                      01200000
         AIF   (&I LT 32768).USE_LH                                     01210000
         AGO   .USE_L                                                   01220000
.*                                                                      01230000
.USE_CLEAR ANOP ,                                                       01240000
&LABEL   CLEAR &REG                    * Wipe register                  01250000
         MEXIT                                                          01260000
.*                                                                      01270000
.USE_LA  ANOP  ,                                                        01280000
&LABEL   LA    &REG,&FLD               * Load literal number            01290000
         MEXIT                                                          01300000
.*                                                                      01310000
.USE_LH  ANOP  ,                                                        01320000
&LABEL   LH    &REG,=H'&FLD'           * Load literal number            01330000
         MEXIT                                                          01340000
.*                                                                      01350000
.USE_L   ANOP  ,                                                        01360000
&LABEL   L     &REG,=F'&FLD'           * Load literal number            01370000
         MEXIT                                                          01380000
.*                                                                      01390000
.MEND    MEND                                                           01400002
