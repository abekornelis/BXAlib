               PRFX=&PRFX              *                                00320000
         AIF   (&BXA_RC GT 4).MEND                                      00330002
.*                                                                      00340000
.* Check the CB parameter                                               00350000
         AIF   ('&DSECT' EQ 'YES').DSECT                                00360000
         AIF   ('&CB' EQ 'EPAL').EMBED                                  00370000
         AIF   ('&CB' EQ 'EPAX').EMBED                                  00380000
         AIF   ('&CB' EQ 'SWAREQPL').EMBED                              00390000
.ERR5    MNOTE 8,'&CB control block not supported'                      00400000
         MEXIT                                                          00410000
.*                                                                      00420000
.* Generate embedded deinition                                          00430000
.EMBED   ANOP                                                           00440000
&LABEL   NESTCB &CB,X,&PRFX                                             00450000
         MEXIT                                                          00460000
.*                                                                      00470000
.DSECT   ANOP                                                           00480000
         AIF   (&BXA_MAC_MAPEPAL).MEND                                  00490002
&BXA_MAC_MAPEPAL SETB 1                                                 00500000
.* Set up translation from control block to macro for DCL               00510000
         GBLC  &BXA_CB_EPAL                                             00520000
         GBLC  &BXA_CB_EPAX                                             00530000
         GBLC  &BXA_CB_SWAREQPL                                         00540000
&BXA_CB_EPAL     SETC 'EPAL'                                            00550000
&BXA_CB_EPAX     SETC 'EPAL'                                            00560000
&BXA_CB_SWAREQPL SETC 'EPAL'                                            00570000
.*                                                                      00580000
.* Change field definitions                                             00590000
SWVA     DSOVR XL3                     * Change char to hex field       00600000
SWBLKID  DSOVR XL1                     * Change char to hex field       00610000
SWLVERS  DSOVR XL2                     * Change char to hex field       00620000
.*                                                                      00630000
         MNOTE *,'Including IEFZB505 mapping macro'                     00640000
         IEFZB505 LOCEPAX=YES          * Include extended EPAL fields   00650000
         DSOVR *END                                                     00660000
.*                                                                      00670000
ZB505    DSECT ,                       * Reset to macro-defined DSECT   00680000
EPAL     EQU   SWAEPA,,C'X'            * Define USING labels for EPAL   00690000
EPAL_LEN EQU   L'SWAEPA                * Length of EPAL                 00700000
EPAX     EQU   SWAEPAX,,C'X'           *    and for EPAX                00710000
EPAX_LEN EQU   L'SWAEPAX               * Length of eXtended EPAL        00720000
.*                                                                      00730000
