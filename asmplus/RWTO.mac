.********************************************************************** 00290001
.*                                                                      00291001
.* Define variables                                                     00300000
         GBLA  &BXA_NUMVAL             * Result from CHKREG             00310000
         LCLC  &RLBL                   * Remote label                   00320000
         LCLC  &_REG                   * Register to plist              00330000
.*                                                                      00340000
.* Check TEXT parameter                                                 00350000
         AIF   (K'&TEXT EQ 0).ERR1A    *                                00360000
         AIF   ('&TEXT'(1,1) NE '(').NOERR1                             00370000
&_REG    SETC  '&TEXT(1)'              *                                00380000
         CHKREG &_REG,g                * Valid GPR?                     00390000
         AIF   (&BXA_RC GT 4).ERR1B    *                                00400000
         AGO   .NOERR1                                                  00410000
.ERR1A   MNOTE 8,'Missing text for WTO'                                 00420000
         MEXIT                                                          00430000
.ERR1B   MNOTE 8,'&_REG is not a valid general purpose register'        00440000
         MEXIT                                                          00450000
.NOERR1  ANOP                                                           00460000
.*                                                                      00470000
.* Check nr of arguments                                                00480000
         AIF   (N'&SYSLIST EQ 1).NOERR2                                 00490000
.ERR2A   MNOTE 4,'Expected only 1 argument: remainder ignored'          00500000
.NOERR2  ANOP                                                           00510000
.*                                                                      00520000
.* Generate code                                                        00530000
         AIF   ('&TEXT'(1,1) EQ '''').GENLIT                            00540000
         AIF   ('&TEXT'(1,1) EQ '(').GENREG                             00550000
         AGO   .GENLOC                 *                                00560000
.*                                                                      00570000
.GENLIT  ANOP  ,                       * Generate for literal argument  00580000
&RLBL    SETC  'RWTO&SYSNDX'           *                                00590000
&RLBL    RDATA WTO,&TEXT               * Define message text (remote)   00600000
&LABEL   L     R1,=AL4(&RLBL)          * Point remote plist             00610000
         AGO   .WTO                    *                                00620000
.*                                                                      00630000
.GENREG  ANOP  ,                       * Generate for register argument 00640000
&LABEL   CPY   R1,&_REG,NOWARN         * Point remote plist             00650000
         AGO   .WTO                    *                                00660000
.*                                                                      00670000
.GENLOC  ANOP  ,                       * Generate for location argument 00680000
&LABEL   LA    R1,&TEXT                * Point remote plist             00690000
.*                                                                      00700000
.WTO     ANOP  ,                       *                                00710000
         SVC   35                      * Issue WTO                      00720000
.*                                                                      00730000
.MEND    MEND                                                           00740002
